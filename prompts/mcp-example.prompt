---
model: googleai/gemini-1.5-flash-latest
data.prompt:
  sources:
    mcp:
      resources:
        myResource:
          name: 'some-resource'
          params:
            id: '123'
      tools:
        myTool:
          name: 'some-tool'
          params:
            query: 'some query'
      prompts:
        myPrompt:
          name: 'some-prompt'
          params:
            question: 'some question'
  result:
    mcp:
      tools:
        - name: 'cleanup-tool'
          params:
            data: '{{output}}'
      prompts:
        - name: 'notification-prompt'
          params:
            message: 'Analysis complete for resource {{myResource.id}}'
output:
  schema: "z.string()"
---

