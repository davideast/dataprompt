{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext", 
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src"
  },
  "include": [
    "src/index.ts",
    "src/cli/index.ts",
    "src/plugins/**/*.ts",
    "src/context/index.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
